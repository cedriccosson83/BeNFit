<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showExoContainer"
    android:layout_width="400dp"
    android:layout_height="400dp">

    <WebView
        android:id="@+id/showExoYTLayout"
        android:layout_width="320dp"
        android:layout_height="208dp"
        android:layout_marginTop="24dp"
        android:padding="30dp"
        android:background="@color/redLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showExoRule" />

    <TextView
        android:id="@+id/showExoAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/author"
        app:layout_constraintBottom_toTopOf="@+id/showExoDesc"
        app:layout_constraintEnd_toEndOf="@+id/showExoName"
        app:layout_constraintStart_toStartOf="@+id/showExoName"
        app:layout_constraintTop_toBottomOf="@+id/showExoName" />

    <ImageView
        android:id="@+id/showExoLevelIcon"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/img"
        app:layout_constraintEnd_toStartOf="@+id/showExoName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/showExoName"
        app:srcCompat="@drawable/level_3" />

    <TextView
        android:id="@+id/showExoName"
        android:layout_width="259dp"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxWidth="300dp"
        android:text="@string/exo_name"
        android:textColor="#000000"
        android:textSize="24sp"
        app:autoSizeMinTextSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/showExoAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/showExoShare"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="@+id/showExoName"
        app:layout_constraintStart_toEndOf="@+id/showExoName"
        app:layout_constraintTop_toTopOf="@+id/showExoName"
        app:srcCompat="@drawable/share" />


    <TextView
        android:id="@+id/showExoDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:text="@string/exo_descr"
        app:layout_constraintBottom_toTopOf="@+id/showExoRule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showExoAuthor" />


    <TextView
        android:id="@+id/showExoLevelText"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="2dp"
        android:text="@string/level"
        android:textSize="12sp"
        app:autoSizeMaxTextSize="13sp"
        app:autoSizeMinTextSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/showExoLevelIcon"
        app:layout_constraintStart_toStartOf="@+id/showExoLevelIcon"
        app:layout_constraintTop_toBottomOf="@+id/showExoLevelIcon" />

    <TextView
        android:id="@+id/showExoRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/consigne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showExoDesc" />

    <TextView
        android:id="@+id/showExoRuleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/value"
        app:layout_constraintBottom_toBottomOf="@+id/showExoRule"
        app:layout_constraintStart_toEndOf="@+id/showExoRule"
        app:layout_constraintTop_toTopOf="@+id/showExoRule" />

    <LinearLayout
        android:id="@+id/showExoMediaLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showExoRuleValue" >

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>