<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/home_programs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:contentDescription="@string/img"
            app:srcCompat="@drawable/homeprograms"
            tools:ignore="NestedWeights"
            android:scaleType = "centerCrop" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_weight="25"
    android:orientation="horizontal"
    android:layout_height="0dp">

        <ImageButton
            android:id="@+id/home_sessions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:background="@drawable/homesession"
            android:contentDescription="@string/img"
            android:scaleType="centerCrop"
            tools:ignore="NestedWeights" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/home_feed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:contentDescription="@string/img"
            app:srcCompat="@drawable/homefeed"
            tools:ignore="NestedWeights"
            android:scaleType = "centerCrop" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:layout_height="0dp">


        <ImageView
            android:id="@+id/home_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:contentDescription="@string/img"
            app:srcCompat="@drawable/homeprofile"
            tools:ignore="NestedWeights"
            android:scaleType = "centerCrop" />

    </LinearLayout>


</LinearLayout>