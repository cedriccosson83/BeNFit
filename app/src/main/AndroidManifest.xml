<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="isen.cedriclucieflorent.benfit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="isen.cedriclucieflorent.benfit.ApplicationContext"
        android:icon="@mipmap/benfit_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/benfit_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="isen.cedriclucieflorent.benfit.ShowProgramActivity"/>
        <activity android:name="isen.cedriclucieflorent.benfit.MenuActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ListSessionActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ProgramActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.SignInActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ProfileActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.WritePostActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.PostActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.FeedActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.SessionActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.SignUpActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ModifyProfile" />
        <activity android:name="isen.cedriclucieflorent.benfit.HomeActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.SessionFeedActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ExerciceActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.NotifActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ListExercicesActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.FullScreenImageView" />
        <activity android:name="isen.cedriclucieflorent.benfit.StreamToUri" />
        <activity android:name="isen.cedriclucieflorent.benfit.ProgramFeedActivity" />
        <activity android:name="isen.cedriclucieflorent.benfit.ShowSessionActivity" />
        <receiver android:name="isen.cedriclucieflorent.benfit.ReminderBroadcast" />
        <activity android:name="isen.cedriclucieflorent.benfit.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>